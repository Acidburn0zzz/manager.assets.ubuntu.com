{
  "scripts": {
    "test": "yarn run lint-scss && yarn run lint-python",
    "lint-scss": "sass-lint static/**/*.scss --exclude node_modules --verbose --no-exit",
    "lint-python": "flake8 assets_manager/ scripts/ && black --check --line-length 79 assets_manager/ scripts/",
    "build": "node-sass --include-path node_modules static/sass --output static/css",
    "watch": "node-sass --include-path node_modules --source-map true --watch static/sass --output static/css",
    "serve": "./entrypoint 0.0.0.0:${PORT}",
    "clean": "rm -rf node_modules yarn-error.log static/css *.log *.sqlite _site/ build/ .jekyll-metadata"
  },
  "devDependencies": {
    "node-sass": "4.11.0",
    "sass-lint": "1.12.1"
  }
}
